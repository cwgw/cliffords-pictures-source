{
	"name": "cliffords-pictures-source",
	"version": "0.0.0",
	"description": "Source photos for and build scripts for cliffords.pictures",
	"bin": {
		"cliffs-pics": "lib/index.js"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"build": "rm -rf lib && npx babel src/cli -d lib",
		"clean": "rm -rf .cache",
		"format": "xo --fix",
		"lint": "xo"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"bottleneck": "^2.19.5",
		"convert-hrtime": "^3.0.0",
		"decimal.js": "^10.2.0",
		"dotenv": "^8.2.0",
		"fs-extra": "^8.1.0",
		"glob": "^7.1.6",
		"imagemin": "^7.0.1",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-pngquant": "^8.0.0",
		"imagemin-webp": "^5.1.0",
		"import-jsx": "^3.0.0",
		"ink": "^2.6.0",
		"ink-spinner": "^3.0.1",
		"lodash": "^4.17.15",
		"lowdb": "^1.0.0",
		"opencv": "^6.2.0",
		"p-queue": "^6.2.1",
		"prop-types": "^15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-redux": "^7.1.3",
		"redux": "^4.0.4",
		"redux-thunk": "^2.3.0",
		"sharp": "^0.23.4",
		"uuid": "^3.3.3",
		"yargs": "^15.0.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.7.5",
		"@babel/core": "^7.7.5",
		"@babel/preset-env": "^7.7.6",
		"@babel/preset-react": "^7.7.0",
		"@babel/register": "^7.7.0",
		"chalk": "^3.0.0",
		"core-js": "^3.4.8",
		"eslint-config-xo-react": "^0.20.0",
		"eslint-plugin-react": "^7.17.0",
		"eslint-plugin-react-hooks": "^2.3.0",
		"prettier": "^1.19.1",
		"regenerator-runtime": "^0.13.3",
		"xo": "^0.25.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cwgw/cliffords-pictures"
	},
	"babel": {
		"presets": [
			"@babel/preset-react",
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": true
					},
					"useBuiltIns": "usage",
					"corejs": "3"
				}
			]
		]
	},
	"xo": {
		"extends": "xo-react",
		"ignores": "site",
		"prettier": true,
		"rules": {
			"react/state-in-constructor": [
				"error",
				"always"
			]
		},
		"space": true
	},
	"config": {
		"withBase64": true,
		"imageFormats": ["jpg", "webp"],
		"imageSizes": [192, 384, 768, 1536],
		"cacheDir": ".cache",
		"dest": {
			"web": "site/content",
			"srcPhoto": "src/photos",
			"srcScan": "src/scans"
		}
	}
}

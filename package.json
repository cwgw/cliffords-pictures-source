{
	"name": "cliffords-pictures-source",
	"version": "0.0.0",
	"description": "Source photos for and build scripts for cliffords.pictures",
	"bin": {
		"cliffs-pics": "lib/index.js"
	},
	"engines": {
		"node": ">=10.17"
	},
	"scripts": {
		"build": "rm -rf lib && npx babel src/cli -d lib",
		"clean": "rm -rf .cache",
		"format": "xo --fix",
		"lint": "xo"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"bottleneck": "^2.19.5",
		"chokidar": "^3.3.1",
		"convert-hrtime": "^3.0.0",
		"decimal.js": "^10.2.0",
		"dotenv": "^8.2.0",
		"fs-extra": "^9.0.0",
		"glob": "^7.1.6",
		"imagemin": "^7.0.1",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-pngquant": "^8.0.0",
		"imagemin-webp": "^5.1.0",
		"import-jsx": "^4.0.0",
		"ink": "^2.7.1",
		"ink-spinner": "^3.0.1",
		"lodash": "^4.17.19",
		"lowdb": "^1.0.0",
		"opencv": "^7.0.0",
		"p-queue": "^6.3.0",
		"pretty-error": "^2.1.1",
		"prop-types": "^15.7.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-redux": "^7.2.0",
		"redux": "^4.0.5",
		"redux-thunk": "^2.3.0",
		"sharp": "^0.25.2",
		"uuid": "^8.0.0",
		"yargs": "^15.3.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@babel/preset-react": "^7.9.4",
		"@babel/register": "^7.9.0",
		"chalk": "^4.0.0",
		"core-js": "^3.6.4",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"prettier": "^2.0.4",
		"regenerator-runtime": "^0.13.5",
		"xo": "^0.30.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cwgw/cliffords-pictures-source"
	},
	"babel": {
		"presets": [
			"@babel/preset-react",
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": true
					},
					"useBuiltIns": "usage",
					"corejs": "3"
				}
			]
		]
	},
	"xo": {
		"extends": "xo-react",
		"ignores": "site",
		"prettier": true,
		"rules": {
			"react/state-in-constructor": [
				"error",
				"always"
			]
		},
		"overrides": [
			{
				"files": "{src}/**/*.js",
				"nodeVersion": ">=12"
			}
		],
		"space": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"xo --fix"
		]
	},
	"config": {
		"cacheDir": ".cache",
		"dest": {
			"web": "site/content",
			"srcPhoto": "src/photos",
			"srcScan": "src/scans"
		},
		"imageFormats": [
			"jpg",
			"webp"
		],
		"imageSizes": [
			192,
			384,
			768,
			1536
		],
		"withBase64": true
	}
}
